{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@organization/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "public"]
}
